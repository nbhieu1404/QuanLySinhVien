<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="330dp"
    android:padding="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Xác thực tài khoản"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <TextView
        android:paddingTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Emal:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtEmail_GanDay"
        android:textSize="20dp"
        android:ems="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Mật khẩu:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtMatKhau_GanDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/txtError_DNL"
        android:drawableLeft="@drawable/ic_error"
        android:textColor="#FF0000"
        android:textSize="15sp"
        android:textStyle="italic"
        android:text="  Tài khoản hoặc mật khẩu không chính xác"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnDangNhapLai"
        android:textColor="@color/white"
        android:backgroundTint="#1988E1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="Đăng nhập"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

</LinearLayout>