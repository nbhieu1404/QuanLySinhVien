<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".DangNhapActivity">
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:hint="  Nhập Email của bạn"
        android:drawableLeft="@drawable/ic_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:hint="  Nhập mật khẩu của bạn"
        android:drawableLeft="@drawable/ic_password"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/txtError"
        android:drawableLeft="@drawable/ic_error"
        android:textColor="#FF0000"
        android:textSize="15sp"
        android:textStyle="italic"
        android:text="  Tài khoản hoặc mật khẩu không chính xác"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/layout_sign_up"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản?"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#115777"
            android:textSize="15sp"
            android:text="Đăng ký"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnDangNhap"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:backgroundTint="#2CB2C3">
    </Button>

</LinearLayout>